{
    "_class": ["Run", "Opts"],
    "name": "gaussianProcessDim3single",
    "path": "~/DEEBtest",
    "truth": {
        "_class": ["Truth", "Opts"],
        "reps": 1,
        "nTrajectories": 1,
        "timeRange": [0, 200],
        "odeSolver": {
            "_class": ["OdeSolver", "Opts"],
            "timeStep": 0.01
        },
        "deFunSampler": {
            "_class": ["gaussianProcess", "Function", "Sampler", "Opts"],
            "d": 3,
            "bandwidth": 4,
            "regulation": 1e-7,
            "nSupp": 20,
            "locationSampler": {
                "_class": ["uniformOnBall", "Array", "Sampler", "Opts"],
                "range": [0, 10],
                "keepFirstColumn": false
            },
            "valueSampler": {
                "_class": ["normal", "Array", "Sampler", "Opts"],
                "keepFirstColumn": false,
                "mean": 0,
                "sd": 1
            },
            "postprocessors": {
                "_class": ["Postprocessor", "List", "Opts"],
                "list": [ 
                    {
                        "_class": ["softBoundary", "Postprocessor", "Opts"],
                        "boundaryRange": [5, 10]
                    }
                ]
            }
        },
        "u0Sampler": {
            "_class": ["uniformOnBall", "Array", "Sampler", "Opts"],
            "range": [0, 1]    
        },
        "conditions": {
            "_class": ["Condition", "List", "Opts"],
            "list": [ 
                {
                    "_class": ["turning", "Condition", "Opts"],
                    "threshold": 0.05,
                    "minTurnCount": 15
                }
            ]
        }
    },
    "observation": {
        "_class": ["Observation", "Opts"],
        "n": 100,
        "timeStep": 1,
        "reps": 1,
        "scales": [0, 0.2],
        "noiseFree": [1,-1],
        "noiseSampler": {
            "_class": ["normal", "Array", "Sampler", "Opts"],
            "sd": 1  
        }
    },
    "taskList": {
        "_class": ["Task", "List", "Opts"],
        "list": [
            {
                "_class": ["estiObsTrajs", "Task", "Opts"],
                "name": "observation time",
                "predictionTime": [0, 100],
                "timeStep": 0.1,
                "scoreList": {
                    "_class": ["Score", "List", "Opts"],
                    "list": [
                        {
                            "_class": ["Distance", "TimeState", "Score", "Opts"],
                            "name": "L2",
                            "method": "L2"
                        },
                        {
                            "_class": ["Distance", "TimeState", "Score", "Opts"],
                            "name": "L1",
                            "method": "L1"
                        },
                        {
                            "_class": ["FollowTime", "TimeState", "Score", "Opts"],
                            "name": "FollowTime",
                            "radius": 0.5,
                            "timeScale": 1
                        },
                        {
                            "_class": ["ValidTime", "TimeState", "Score", "Opts"],
                            "name": "ValidTime",
                            "threshold": 0.4,
                            "nomalization": "scale"
                        }
                    ]
                }
            },
            {
                "_class": ["estiObsTrajs", "Task", "Opts"],
                "name": "future",
                "predictionTime": [100, 200],
                "timeStep": 0.1,
                "scoreList": {
                    "_class": ["Score", "List", "Opts"],
                    "list": [
                        {
                            "_class": ["Distance", "TimeState", "Score", "Opts"],
                            "name": "L2",
                            "method": "L2"
                        },
                        {
                            "_class": ["Distance", "TimeState", "Score", "Opts"],
                            "name": "L1",
                            "method": "L1"
                        },
                        {
                            "_class": ["FollowTime", "TimeState", "Score", "Opts"],
                            "name": "FollowTime",
                            "radius": 0.5,
                            "timeScale": 1
                        },
                        {
                            "_class": ["ValidTime", "TimeState", "Score", "Opts"],
                            "name": "ValidTime",
                            "threshold": 0.4,
                            "nomalization": "scale"
                        }
                    ]
                }
            }
        ]
    }
}
