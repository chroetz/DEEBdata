{
    "_class": ["Run", "Opts"],
    "name": "localConstDim3single",
    "path": "~/DEEBtest",
    "truthOpts": {
        "_class": ["Truth", "Opts"],
        "reps": 1,
        "tMax": 200,
        "tStepOde": 0.01,
        "deFunSampler": {
            "_class": ["localConst", "Function", "Sampler", "Opts"],
            "d": 3,
            "bw": 2,
            "nSupp": 30,
            "locationSampler": {
                "_class": ["uniformOnBall", "Array", "Sampler", "Opts"],
                "range": [0, 10],
                "sparsity": [],
                "keepFirstColumn": false
            },
            "valueSampler": {
                "_class": ["normal", "Array", "Sampler", "Opts"],
                "sparsity": [],
                "keepFirstColumn": false,
                "mean": 0,
                "sd": 1
            },
            "postprocessors": {
                "_class": ["Postprocessor", "List", "Opts"],
                "list": [ 
                    {
                        "_class": ["softBoundary", "Postprocessor", "Opts"],
                        "boundaryRange": [5, 10]
                    }
                ]
            }
        },
        "u0Sampler": {
            "_class": ["uniformOnBall", "Array", "Sampler", "Opts"],
            "range": [0, 1]    
